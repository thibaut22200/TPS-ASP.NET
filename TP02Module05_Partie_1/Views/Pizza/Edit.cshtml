@model TP02Module05_Partie_1.CreateEditPizzaVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Pizza</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Pizza.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Pizza.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Pizza.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pizza.Nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pates, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdSelectedPate, Model.Pates.Select(m => new SelectListItem { Value = m.Id.ToString(), Text = m.Nom }), htmlAttributes: new { @class = "form-control col-md-2" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ingredients, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.IdSelectedIngredients, Model.Ingredients.Select(m => new SelectListItem { Value = m.Id.ToString(), Text = m.Nom }), htmlAttributes: new { @class = "form-control col-md-2" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
